# Required
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_USER_ID=your_telegram_user_id

# Optional - Paths
# CLAUDE_PATH=claude                        # Path to claude CLI if not in PATH
# RELAY_DIR=~/.pyclaudius-relay             # Working directory

# Optional - Memory
# MEMORY_ENABLED=true                       # Enable persistent memory
# MAX_MEMORIES=100                          # Max facts to store

# Optional - Cron
# CRON_ENABLED=true                        # Enable scheduled tasks and cron-jobs

# Optional - Tools
# ALLOWED_TOOLS=["WebSearch","WebFetch"]   # Pre-approve Claude CLI tools

# Optional - Auth
# AUTO_REFRESH_AUTH=true                   # Auto-refresh expired OAuth tokens (see README)
